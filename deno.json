{
  "workspace": ["./api", "./bot"],
  "tasks": {
    "test:all": "deno test --allow-env --allow-read --allow-sys --allow-ffi",
    "db:push": "deno run --allow-env --allow-read --allow-sys --allow-run --allow-ffi --node-modules-dir npm:drizzle-kit push",
    "db:generate": "deno run --allow-env --allow-read --allow-sys --allow-run npm:drizzle-kit generate",
    "db:migrate": "deno run npm:drizzle-kit migrate",
    "deploy-commands": "deno run --allow-net --allow-read --allow-env --allow-ffi --env=.env.dev bot/src/deploy-commands.ts"
  },
  "compilerOptions": {
    "strict": true
  },
  "fmt": {
    "include": ["api/", "bot/"],
    "exclude": ["node_modules/", "coverage/"],
    "useTabs": false,
    "indentWidth": 2,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "include": ["api/", "bot/"],
    "exclude": ["node_modules/", "coeverage/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "imports": {
    "drizzle-kit": "npm:drizzle-kit"
  }
}
