{
  "name": "@adteemo/bot",
  "exports": {
    ".": "./src/main.ts"
  },
  "tasks": {
    "dev": "deno run -A --watch --env=../.env.dev src/main.ts",
    "test": "deno test -A --env=../.env.dev",
    "deploy-commands": "deno run --allow-net --allow-read --allow-env --allow-ffi src/deploy-commands.ts"
  },
  "compilerOptions": {
    "types": ["./src/@types/discord.js.d.ts"]
  },
  "imports": {
    "discord.js": "npm:discord.js",
    "hono": "npm:hono",
    "hono/client": "npm:hono/client",
    "zod": "npm:zod",
    "@hono/zod-validator": "npm:@hono/zod-validator",
    "drizzle-orm": "npm:drizzle-orm",
    "drizzle-orm/sqlite-core": "npm:drizzle-orm/sqlite-core",
    "drizzle-kit": "npm:drizzle-kit",
    "@libsql/client": "npm:@libsql/client"
  }
}
