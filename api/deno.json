{
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-read --allow-env --allow-write src/main.ts",
    "db:push": "deno run -A npm:drizzle-kit push",
    "db:generate": "deno run -A npm:drizzle-kit generate",
    "db:migrate": "deno run --allow-net --allow-read --allow-write npm:drizzle-kit migrate"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  },
  "nodeModulesDir": "auto",
  "imports": {
    "hono": "npm:hono",
    "zod": "npm:zod",
    "@hono/zod-validator": "npm:@hono/zod-validator",
    "drizzle-orm": "npm:drizzle-orm",
    "drizzle-orm/sqlite-core": "npm:drizzle-orm/sqlite-core",
    "drizzle-kit": "npm:drizzle-kit",
    "@libsql/client": "npm:@libsql/client"
  }
}
